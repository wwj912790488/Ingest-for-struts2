<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.2//EN"
	"http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">
<validators>
	<field name="oldPassword">
		<field-validator type="required" short-circuit="true">
			<param name="trim">true</param>
			<message key="xwork.default.invalid.fieldvalue" />
		</field-validator>
		<field-validator type="requiredstring" short-circuit="true">
			<param name="trim">true</param>
			<message key="xwork.default.invalid.fieldvalue" />
		</field-validator>
	</field>
	<field name="newPassword">
		<field-validator type="required" short-circuit="true">
			<param name="trim">true</param>
			<message key="xwork.default.invalid.fieldvalue" />
		</field-validator>
		<field-validator type="requiredstring" short-circuit="true">
			<param name="trim">true</param>
			<message key="xwork.default.invalid.fieldvalue" />
		</field-validator>
		<field-validator type="fieldexpression">
            <param name="expression">(!newPassword.equals(oldPassword))</param>
            <message key="security.error.newPasswordEqualOldPassword" />
		</field-validator>
	</field>
	<field name="newPasswordConfirm">
		<field-validator type="required" short-circuit="true">
			<param name="trim">true</param>
			<message key="xwork.default.invalid.fieldvalue" />
		</field-validator>
		<field-validator type="requiredstring" short-circuit="true">
			<param name="trim">true</param>
			<message key="xwork.default.invalid.fieldvalue" />
		</field-validator>
		<field-validator type="fieldexpression">
            <param name="expression">(newPassword.equals(newPasswordConfirm))</param>
            <message key="security.error.passwordConfirmNotEqual" />
		</field-validator>
	</field>
</validators>