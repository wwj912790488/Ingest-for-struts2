<assembly>
	<id>release-${project.version}</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<moduleSets>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>com.arcsoft:commander-agent</include>
			</includes>
			<binaries>
				<outputDirectory>/</outputDirectory>
				<attachmentClassifier>bin</attachmentClassifier>
				<includeDependencies>false</includeDependencies>
				<outputFileNameMapping>agent.${module.extension}</outputFileNameMapping>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
	</moduleSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>com.arcsoft:arcvideo-checkgpu</include>
			</includes>
			<scope>provided</scope>
		</dependencySet>
		<dependencySet>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>com.arcsoft:arcvideo-license-reader</include>
			</includes>
			<outputFileNameMapping>arcvideo-license.zip</outputFileNameMapping>
			<scope>provided</scope>
		</dependencySet>
		<dependencySet>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>com.arcsoft:transcoder-tmservice</include>
			</includes>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>${project.build.directory}</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>*.zip</include>
				<include>*.war</include>
			</includes>
			<excludes>
				<exclude>arcvideo-release-*.zip</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>build/dependencies/packages</directory>
			<outputDirectory>/dependencies/packages</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>build/dependencies/repository</directory>
			<outputDirectory>/dependencies/repository</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>build/dependencies/bin</directory>
			<fileMode>0755</fileMode>
			<outputDirectory>/dependencies/bin</outputDirectory>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>doc/ha.properties</source>
			<outputDirectory>/</outputDirectory>
		</file>
		<file>
			<source>doc/ingestdb.sql</source>
			<outputDirectory>/</outputDirectory>
		</file>
		<file>
			<source>doc/deployguide.pdf</source>
			<outputDirectory>/</outputDirectory>
		</file>
		<file>
			<source>doc/upgrade.sh</source>
			<outputDirectory>/</outputDirectory>
		</file>
		<file>
			<source>src/main/resources/config/limitation.properties</source>
			<outputDirectory>/</outputDirectory>
		</file>
	</files>
</assembly>
