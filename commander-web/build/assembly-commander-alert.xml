<assembly>
	<id>commander-alert</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<moduleSets>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>com.arcsoft:commander-alert</include>
			</includes>
			<binaries>
				<outputDirectory>/lib</outputDirectory>
				<includeDependencies>false</includeDependencies>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
	</moduleSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>com.arcsoft:arcvideo-alert-app</include>
			</includes>
			<unpack>true</unpack>
			<unpackOptions>
				<excludes>
					<exclude>conf/alert.xml</exclude>
					<exclude>conf/resource.xml</exclude>
					<exclude>bin/alertd</exclude>
				</excludes>
			</unpackOptions>
			<scope>provided</scope>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>build/alert/</directory>
			<excludes>
				<exclude>bin/*</exclude>
			</excludes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>build/alert/bin</directory>
			<fileMode>0755</fileMode>
			<outputDirectory>/bin</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>